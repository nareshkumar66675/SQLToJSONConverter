        </Grid.Resources>
        <xctk:BusyIndicator x:Name="ProcessingIndicator" IsBusy="True">
            <xctk:BusyIndicator.BusyContent>
                <StackPanel Margin="1">
                    <TextBlock Height="19"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="Executing PreRequisites" />
                    <StackPanel Margin="3">
                        <TextBlock Name="processText"
                                   Margin="0,0,0,2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                        <ProgressBar Name="preReqProcessBar" Height="18" Margin="3" />
                    </StackPanel>
                </StackPanel>
            </xctk:BusyIndicator.BusyContent>
            <xctk:BusyIndicator.OverlayStyle>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="#bfbfbf" />
                    <Setter Property="Opacity" Value="0.4" />
                </Style>
            </xctk:BusyIndicator.OverlayStyle>
            <xctk:BusyIndicator.ProgressBarStyle>
                <Style TargetType="ProgressBar">
                    <Setter Property="Visibility" Value="Hidden" />
                </Style>
            </xctk:BusyIndicator.ProgressBarStyle>
            <xcdg:DataGridControl x:Name="ProcessGrid"
                                  Width="580"
                                  Height="421"
                                  Margin="15,10,5,0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top"
                                  ScrollViewer.CanContentScroll="False"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
