<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MigrationTool"
        xmlns:controls="clr-namespace:MigrationTool.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="MigrationTool.Wizard"
        mc:Ignorable="d"
        Icon="AMLogo.ico"
        Title="Asset Matrix Data Migrate Tool"
        Height="560.108" Width="706.17" WindowStartupLocation="CenterScreen"
        x:Name="WizardWindow">
    <Grid HorizontalAlignment="Left" Height="525" VerticalAlignment="Top" Width="696">
        <xctk:Wizard x:Name="Wiz" FinishButtonClosesWindow="True" CurrentPage="{Binding ElementName=AssetSiteSelectionPage}" >

            <xctk:WizardPage FontSize="14"  x:Name="IntroPage" 
                                   Title="Asset Matrix Data Migrate Tool"
                                   Description="Migrate Existing Data to new structure" 
                             HeaderImage="AMLoginLogo.png">
                <xctk:WizardPage.Content>
                    <Grid>
                        <Image  Source="AMLoginLogo.png" Margin="30,121,360,171"/>
                        
                    </Grid>
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="SourceConnectionPage" PageType="Interior"
                                   Title="STEP 1 : Exisiting Database Connection"
                                   Description="Enter the existing database connection details."
                                   NextPage="{Binding ElementName=AuthConnectionPage}"
                                   PreviousPage="{Binding ElementName=IntroPage}"
                                   >
                <!--CanSelectNextPage="False">-->
                
                <xctk:WizardPage.Content>
                    <Grid >
                        <controls:DatabaseConfigUserControl x:Name="SrcConnectCntrl" Margin="116,88,116,87" RenderTransformOrigin="1.023,0.523"></controls:DatabaseConfigUserControl>
                    </Grid>
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="AuthConnectionPage" PageType="Interior"
                                   Title="STEP 2 : Auth Database Connection"
                                   Description="Enter the auth database connection details."
                                   NextPage="{Binding ElementName=AssetConnectionPage}"
                                   PreviousPage="{Binding ElementName=SourceConnectionPage}"
                             >
                <!--CanSelectNextPage="False">-->
                <xctk:WizardPage.Content>
                    <Grid >
                        <controls:DatabaseConfigUserControl x:Name="AuthConnectCntrl" Margin="116,88,116,87" RenderTransformOrigin="1.023,0.523"></controls:DatabaseConfigUserControl>
                    </Grid>
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="AssetConnectionPage" PageType="Interior"
                                   Title="STEP 3 : Asset Database Connection"
                                   Description="Enter the asset database connection details."
                                   NextPage="{Binding ElementName=AssetSiteSelectionPage}"
                                   PreviousPage="{Binding ElementName=AuthConnectionPage}"
                             >
                <!--CanSelectNextPage="False">-->
                <xctk:WizardPage.Content>
                    <Grid >
                        <controls:DatabaseConfigUserControl x:Name="AssetConnectCntrl" Margin="116,88,116,87" RenderTransformOrigin="1.023,0.523"></controls:DatabaseConfigUserControl>
                    </Grid>
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="AssetSiteSelectionPage" PageType="Interior"
                                   Title="STEP 3 : Asset Database Connection"
                                   Description="Enter the asset database connection details."
                                   NextPage="{Binding ElementName=ComponentsSelectionPage}"
                                   PreviousPage="{Binding ElementName=AssetConnectionPage}"
                             >
                <!--CanSelectNextPage="False">-->
                <xctk:WizardPage.Content>
                    <Grid >
                        <controls:SiteSelectUserControl x:Name="AssetSiteSelectCntrl" Margin="10" RenderTransformOrigin="1.023,0.523"></controls:SiteSelectUserControl>
                    </Grid>
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="ComponentsSelectionPage" PageType="Interior"
                                   Title="STEP 4 : Components Selection"
                                   Description="Select the Components which needs to be migrated."
                                   NextPage="{Binding ElementName=ComponentsProcessPage}"
                                   PreviousPage="{Binding ElementName=AssetConnectionPage}"
                                   CanSelectNextPage="true">
                <xctk:WizardPage.Content>
                    <Frame Source="Views\ComponentsSelectPage.xaml" />
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="ComponentsProcessPage" PageType="Interior"
                                   Title="STEP 5 : Migration"
                                   Description="Press Start to initiate the migrtaion process."
                                   NextPage="{Binding ElementName=LastPage}"
                                   PreviousPage="{Binding ElementName=ComponentsSelectionPage}"
                                   CanSelectNextPage="False"
                                   CanCancel="False">
                <xctk:WizardPage.Content>
                    <Frame x:Name="ProcessFrame"  Source="Views\ComponentsProcessPage.xaml" />
                </xctk:WizardPage.Content>
            </xctk:WizardPage>
            <xctk:WizardPage x:Name="LastPage" PageType="Interior"
                                   Title="Last Page"
                                   Description="This is the last page in the process"
                                   CanFinish="True"/>
        </xctk:Wizard>
    </Grid>
</Window>
